<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/locationColorImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/circle_background"
            android:layout_margin="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/locationColorImageView"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toLeftOf="@id/locationRadiusTextView"
                >

                <TextView
                    android:id="@+id/locationNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location name"
                    android:textSize="18sp"
                    android:textColor="@color/dark_blue"
                    android:ellipsize="end"
                    android:maxEms="20"
                    android:maxLines="1"
                    android:paddingBottom="4dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/locationAddressTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location address"
                    android:textSize="15sp"
                    android:ellipsize="end"
                    android:maxEms="20"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>


            <TextView
                android:id="@+id/locationRadiusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50m"
                android:textSize="24sp"
                android:paddingRight="10dp"
                android:paddingLeft="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:alpha="0.8"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />


        </RelativeLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>